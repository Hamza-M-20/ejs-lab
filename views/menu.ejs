<h2>Mains</h2>
<ul>
  <% menu.forEach(item => { %>
    <% if (item.category === 'Mains') { %>
      <li>
        <strong><%= item.name %></strong> - $<%= item.price.toFixed(2) %><br>
        Rating: <%= item.rating %>/5<br>
        <em><%= item.details %></em>
